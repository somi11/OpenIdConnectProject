@page
@model Cmos.IDP.Pages.User.Registration.IndexModel
@{
    <div class="page-header">
        <h1>User Registration</h1>
    </div>
    <partial name="_ValidationSummary" />
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true)
        </div>
    }

    <div class=row>
        <div clas="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">User Registration</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Input.UserName"></label>
                                <input class="form-control" placeholder="Username" asp-for="Input.UserName" autofocus />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input class="form-control" placeholder="email" asp-for="Input.Email" autocomplete="off" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.GivenName"></label>
                                <input class="form-control" placeholder="GivenName" asp-for="Input.GivenName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.FamilyName"></label>
                                <input class="form-control" placeholder="FamilyName" asp-for="Input.FamilyName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Country"></label>
                                <select class="form-control" asp-for="Input.Country" asp-items="@Model.Input.CountryCodes"></select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
}